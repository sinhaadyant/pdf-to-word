# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development
TRUST_PROXY=false

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_FILES_PER_REQUEST=10
MAX_TOTAL_SIZE=209715200
FIELD_SIZE_LIMIT=1048576

# Python Configuration
PYTHON_EXECUTABLE=py
PYTHON_MODULE=pdf2docx.main
PYTHON_COMMAND=convert
CONVERSION_TIMEOUT=300000

# Storage Configuration
UPLOADS_DIR=uploads
OUTPUTS_DIR=outputs
CLEANUP_INTERVAL=86400000
MAX_FILE_AGE=604800000

# Security Configuration - Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESS=false
RATE_LIMIT_SKIP_FAILED=false

# Security Configuration - CORS
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=false
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Security Configuration - Helmet
HELMET_ENABLED=true
HELMET_CSP=true
HELMET_HSTS=true

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=false
LOG_FORMAT=combined
LOG_FILE=

# API Configuration
API_BASE_PATH=/api
API_VERSION=v1
ENABLE_HEALTH_CHECK=true
ENABLE_METRICS=false
ENABLE_SWAGGER=false

# Performance Configuration - Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# Performance Configuration - Cache
CACHE_ENABLED=false
CACHE_MAX_AGE=3600

# Monitoring Configuration
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000
ENABLE_METRICS=false
METRICS_PORT=9090
